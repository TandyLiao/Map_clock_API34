<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/popview_background"
    android:padding="16dp">

    <TextView
        android:id="@+id/DestinationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="25dp"
        android:textColor="@color/green" />
    <TextView
        android:id="@+id/DestinationArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textSize="15dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/destination_latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_margin="5dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/destination_longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        android:textSize="15dp" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="bottom">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:background="@drawable/btn_additem"
            android:textColor="@color/green"
            app:backgroundTint="@null"
            android:layout_gravity="center"
            android:text="取消"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />
        <View
            android:layout_width="120dp"
            android:layout_height="20dp"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:background="@drawable/btn_additem"
            android:textColor="@color/green"
            app:backgroundTint="@null"
            android:layout_gravity="center"
            android:text="下一步"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"  />

    </LinearLayout>
</LinearLayout>
